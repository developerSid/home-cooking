{
  "tasks": [
    {
      "name": "Run csharpier",
      "command": "dotnet",
      "args": [ "csharpier", "${staged}" ],
      "include": [ "**/*.cs" ]
    },
    {
      "name": "Run fantomas",
      "command": "dotnet",
      "args": [ "fantomas", "${staged}" ],
      "include": [ "**/*.fs", "**/*.fsx" ]
    },
    {
      "name": "build-check",
      "command": "dotnet",
      "group": "pre-push",
      "args": ["build", "/warnaserror", "--no-restore", "--verbosity", "quiet"]
    }
  ]
}